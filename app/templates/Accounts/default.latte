{block content}
<h2>Accounts</h2>
{if !empty($accounts)}
    <p n:foreach="$accounts as $account">
        <h4>{$account->name}</h4>
        <p><span n:if="$account->contacts_count">{$account->contacts_count} contacts</span></p>
        {sep}<hr />{/sep}
    </p>
{else}
    <p>No accounts aviable.</p>
{/if}
<h3>Create new account</h3>
{control addForm}